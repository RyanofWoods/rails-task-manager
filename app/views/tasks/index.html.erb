<h1>My tasks</h1>
<ul class="list-group">
<% @tasks.each do |task| %>
  <li class="list-group-item">
    <i class='<%= task.completed ? "bi bi-check2-square" : "bi bi-app" %>'></i>
    <%= link_to task.title, task_path(task) %>
    <%= link_to(task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?"}) do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </li>
<% end %>
</ul>
<hr>
<%= link_to(new_task_path) do %>
  <div class="btn btn-primary">Create a task</div> 
<% end %>
